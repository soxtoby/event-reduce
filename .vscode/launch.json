    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run tests",
            "program": "${workspaceFolder}/node_modules/wattle/lib/cmd.js",
            "args": [ "${relativeFile}", "--show-stacks" ],
            "autoAttachChildProcesses": true
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run legacy tests",
            "program": "${workspaceFolder}/node_modules/wattle/lib/cmd.js",
            "args": [ "${relativeFile}", "--show-stacks", "--config", "wattle.config.legacy.js" ],
            "autoAttachChildProcesses": true
        }
    ]
}